<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp">
        <!-- Name -->
        <TextView
            android:id="@+id/product_name_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/product_name_name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/product_name_value_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints="180"
            android:background="@drawable/edit_text_drawable"
            android:elevation="16dp"
            android:ems="13"
            android:hint="@string/product_name_value"
            android:inputType="textCapSentences|textAutoCorrect"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="22sp" />

        <!-- Quantity -->
        <TextView
            android:id="@+id/product_quantity_name_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/product_quantity_name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/product_quantity_value_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints="180"
            android:background="@drawable/edit_text_drawable"
            android:elevation="16dp"
            android:ems="13"
            android:hint="@string/product_quantity_value"
            android:inputType="number"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="22sp" />

        <!-- Price -->
        <TextView
            android:id="@+id/product_price_name_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/product_price_name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/product_price_value_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints="180"
            android:background="@drawable/edit_text_drawable"
            android:elevation="16dp"
            android:ems="13"
            android:hint="@string/product_price_value"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="22sp" />

    </LinearLayout>

</RelativeLayout>