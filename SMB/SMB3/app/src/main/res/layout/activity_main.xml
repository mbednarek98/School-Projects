<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shoplist_name_title"
        android:textColor="@color/purple_500"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/component_round_drawable"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/shoplistbutton_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="All ShopList" />
        <Button
            android:id="@+id/shoplistbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/shoplist_name_title" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/textresizename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text Resize"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"
                android:theme="@style/RadioButtonTheme"/>

            <RadioButton
                android:id="@+id/radioButton16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16"
                android:theme="@style/RadioButtonTheme"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/textcolorname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text Color"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/colorblack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Black"
                android:theme="@style/RadioButtonTheme"/>

            <RadioButton
                android:id="@+id/colorpurple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purple"
                android:theme="@style/RadioButtonTheme"/>
        </RadioGroup>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>